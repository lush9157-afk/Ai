# ============================================
# XEONIX DEPLOYMENT ECOSYSTEM - CONFIGURATION
# ============================================

# ==================== DISCORD BOT ====================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_ADMIN_ROLE_ID=your_admin_role_id_here
DISCORD_MODERATOR_ROLE_ID=your_moderator_role_id_here

# ==================== DATABASE ====================
# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xeonix_deployment
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ==================== API & WEB SERVER ====================
API_PORT=3000
API_HOST=0.0.0.0
WEB_PORT=3001
NODE_ENV=production
API_BASE_URL=http://localhost:3000
WEB_BASE_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==================== PAYMENT CONFIGURATION ====================
# Cryptocurrency Addresses
CRYPTO_SOL_ADDRESS=2kc7bD1q1rmFboTd1Gumx4bLE7AAqknDqsKUJkTMnm42
CRYPTO_BTC_ADDRESS=bc1pyaflhky3sd9c9wsdz89h8kkmq53pzdtyqqngqqlngsmx7rgf67qqcmjwp6
CRYPTO_ETH_ADDRESS=0x587570D4BD6DAE0d8Ac20F308eDB11d4A2c4d3e0

# UPI Configuration
UPI_ID=your_upi_id_here
UPI_NAME=Your Name Here
FAMPAY_MERCHANT_ID=your_fampay_merchant_id_here

# Stripe (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# ==================== VPS MANAGEMENT ====================
# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_CERT_PATH=
DOCKER_TLS_VERIFY=0
DOCKER_API_VERSION=1.43

# LXC Configuration
LXC_PATH=/var/lib/lxc
LXC_TEMPLATE_PATH=/usr/share/lxc/templates
LXC_CONFIG_PATH=/etc/lxc

# NAT Network Configuration
NAT_PUBLIC_IP=your_public_ip_here
NAT_PORT_RANGE_START=10000
NAT_PORT_RANGE_END=60000
NAT_INTERNAL_NETWORK=10.0.0.0/24
NAT_GATEWAY=10.0.0.1

# SSH Configuration
SSH_KEY_PATH=/root/.ssh/xeonix_deployment
SSH_DEFAULT_PORT=22
SSH_CONNECTION_TIMEOUT=30000

# ==================== NODE MANAGEMENT ====================
# Main Node Configuration
MAIN_NODE_IP=your_main_node_ip_here
MAIN_NODE_SSH_PORT=22
MAIN_NODE_SSH_USER=root
MAIN_NODE_SSH_KEY_PATH=/path/to/main/node/key

# Resource Nodes (Comma-separated)
RESOURCE_NODES=node1_ip:22:docker,node2_ip:22:lxc,node3_ip:22:docker

# ==================== MONITORING ====================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PORT=3002
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/xeonix-deployment
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30
LOG_COMPRESS=true

# ==================== SECURITY ====================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,https://yourdomain.com
CORS_CREDENTIALS=true

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/xeonix.crt
SSL_KEY_PATH=/etc/ssl/private/xeonix.key

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=Xeonix Deployment

# ==================== EMAIL NOTIFICATIONS ====================
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM=noreply@xeonix.com

# ==================== SMS NOTIFICATIONS ====================
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ==================== GAME SERVER MANAGEMENT ====================
# Pterodactyl-like Panel
GAME_PANEL_ENABLED=true
GAME_PANEL_PORT=8080
GAME_PANEL_ADMIN_EMAIL=admin@xeonix.com
GAME_PANEL_ADMIN_PASSWORD=your_game_panel_password_here

# Supported Games
SUPPORTED_GAMES=minecraft,csgo,rust,ark,valheim,terraria,7days,gmod

# ==================== BACKUP & STORAGE ====================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/xeonix

# S3-Compatible Storage (Optional)
S3_ENABLED=false
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=xeonix-backups
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
S3_REGION=us-east-1

# ==================== CDN & LOAD BALANCER ====================
CDN_ENABLED=false
CDN_PROVIDER=cloudflare
CDN_API_KEY=your_cdn_api_key_here
CDN_ZONE_ID=your_cdn_zone_id_here

LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_ALGORITHM=round_robin

# ==================== WEBHOOKS ====================
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30000

# Discord Webhooks
DISCORD_WEBHOOK_ORDERS=your_orders_webhook_url_here
DISCORD_WEBHOOK_PAYMENTS=your_payments_webhook_url_here
DISCORD_WEBHOOK_ALERTS=your_alerts_webhook_url_here
DISCORD_WEBHOOK_LOGS=your_logs_webhook_url_here

# ==================== ADVANCED FEATURES ====================
# AI/ML Features
AI_ENABLED=false
AI_MODEL_PATH=/var/lib/xeonix/models
AI_PREDICTION_ENABLED=false

# Auto-Scaling
AUTO_SCALING_ENABLED=false
AUTO_SCALING_MIN_INSTANCES=1
AUTO_SCALING_MAX_INSTANCES=10
AUTO_SCALING_CPU_THRESHOLD=80
AUTO_SCALING_MEMORY_THRESHOLD=85

# DDoS Protection
DDOS_PROTECTION_ENABLED=true
DDOS_MAX_REQUESTS_PER_IP=1000
DDOS_BAN_DURATION=3600

# ==================== DEVELOPMENT ====================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false

# ==================== MISC ====================
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
CURRENCY=USD
COIN_NAME=Xeonix-Coins
COIN_SYMBOL=XNC

# Admin Configuration
ADMIN_DISCORD_IDS=your_discord_id_here,another_admin_id_here
SUPER_ADMIN_DISCORD_ID=your_discord_id_here

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Feature Flags
FEATURE_VPS_MANAGEMENT=true
FEATURE_GAME_SERVERS=true
FEATURE_SHOP=true
FEATURE_MONITORING=true
FEATURE_BILLING=true
FEATURE_API=true
FEATURE_WEB_DASHBOARD=true
